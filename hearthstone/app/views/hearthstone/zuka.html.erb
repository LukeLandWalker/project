<h1>新建卡组</h1>
<div>
<table style="magin-right:800px; margin-left:200px; margin-top:20px">
  <tr>
    <th>name</th>
    <th>type</th>
    <th>cost</th>
  </tr>
<% @cards.each do |card| %>
  <tr>
    <th><%= link_to card.name, :controller => 'hearthstone', :action => 'show', :id => card, :remote => true, "data-type" => "script" %></th>
    <th><%= card.types %></th>
    <th><%= card.cost %></th>
  </tr>
<% end %>
</table>
<div id="content" style="margin-left: 400px; margin-top:20px">
</div>
</div>
